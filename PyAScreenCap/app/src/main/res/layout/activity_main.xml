<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <Button
            android:id="@+id/btn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="69dp"
            android:text="@string/btn_recoder" android:layout_marginStart="0dp"/>
    
    <TextView
        android:text="@string/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"/>
    
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/edit_ip"
            android:layout_marginTop="59dp" android:hint="ip"/>
    
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:id="@+id/edit_w"
            android:layout_marginTop="118dp"
            android:layout_alignStart="@+id/edit_ip" android:hint="w" android:layout_marginStart="0dp"/>
    
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edit_h"
            android:hint="h" android:layout_alignParentTop="true" android:layout_marginTop="181dp"
            android:layout_alignStart="@+id/edit_ip"/>

</RelativeLayout>